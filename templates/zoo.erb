# The number of milliseconds of each tick
<% if ticktime and ! ticktime.empty? -%>
tickTime=<%= ticktime %>
<% else -%>
tickTime=2000
<% end -%>
# The number of ticks that the initial
# synchronization phase can take
<% if initlimit and ! initlimit.empty? -%>
initLimit=<%= initlimit %>
<% else -%>
initLimit=5
<% end -%>
# The number of ticks that can pass between
# sending a request and getting an acknowledgement
<% if synclimit and ! synclimit.empty? -%>
syncLimit=<%= synclimit %>
<% else -%>
syncLimit=2
<% end -%>
# the directory where the snapshot is stored.
# do not use /tmp for storage, /tmp here is just
# example sakes.
<% if datadir and ! datadir.empty? -%>
dataDir=<%= datadir %>
<% else -%>
dataDir=/var/zookeeper
<% end -%>
# the port at which the clients will connect
<% if clientport and ! clientport.empty? -%>
clientPort=<%= clientport %>
<% else -%>
clientPort=2181
<% end -%>
# the maximum number of client connections.
# increase this if you need to handle more clients
<% if maxclientcnxns and ! maxclientcnxns.empty? -%>
maxClientCnxns=<%= maxclientcnxns -%>
<% else -%>
#maxClientCnxns=60
<% end -%>
# The number of snapshots to retain in dataDir
<% if autopurge_snapretaincount and ! autopurge_snapretaincount.empty? -%>
autopurge.snapRetainCount=<%= autopurge_snapretaincount %>
<% else -%>
#autopurge.snapRetainCount=3
<% end -%>
# Purge task interval in hours
# Set to "0" to disable auto purge feature
<% if autopurge_purgeinterval and ! autopurge_purgeinterval.empty? -%>
autopurge.purgeInterval=<%= autopurge_purgeinterval %>
<% else -%>
#autopurge.purgeInterval=1
<% end -%>
# Servers in the cluster
<% if servers and ! servers.empty? -%>
<% servers.to_enum.with_index(1).each do |server, idx| -%>
<%= "server.#{idx}=#{server}:2888:3888" %>
<% end -%>
<% else -%>
#server.1=zoo1:2888:3888
<% end -%>